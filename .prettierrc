{
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "arrowParens": "always",
    "vueIndentScriptAndStyle": false,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "SimonSiefke.prettier-vscode",

    "overrides": [
        {
            "files": ["*.vue", "*.stories.js"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
